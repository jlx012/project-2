{% layout 'layout.liquid' %}

{% block content %}
    {% for playlist in playlists %}
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-dark mb-3 text-center">
                    <div class="card-header" style="text-align: center">
                        <h5>{{playlist.name}}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text" style="text-align: center">
                            {{playlist.description}}
                        </p>
                    </div>
                    <div class="container card-footer text-center" id="footer">
                        <div class="row justify-content-center">
                            <div class="col-md-4">
                                <a href="/playlists/mine/{{playlist._id}}">View</a>
                            </div>
                            <div class="col-md-4">   
                                <form action="/playlists/mine/{{playlist._id}}?_method=DELETE" method="POST">
                                    <input type="submit" value="Delete">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %} 
{% endblock %}